---
import en from '../i18n/locales/en.json';
import es from '../i18n/locales/es.json';

const lang = Astro.props.lang || 'en';
const translations = lang === 'es' ? es : en;
const t = (key) => translations[key] || key;

// English default = no prefix. Spanish = /es prefix.
const prefix = lang === 'es' ? '/es' : '';
---

<section class="hero">
	<div class="cosmic-background">
		<div class="stars"></div>
		<div class="nebula nebula-1"></div>
		<div class="nebula nebula-2"></div>
		<div class="nebula nebula-3"></div>
	</div>

	<div class="particles"></div>

	<div class="hero-content">
		<div class="glowing-orb-container">
			<div class="glowing-orb"></div>
			<div class="orbit-ring orbit-ring-1"></div>
			<div class="orbit-ring orbit-ring-2"></div>
			<div class="orbit-ring orbit-ring-3"></div>

			<!-- NEW: logo-driven glow source -->
			<div class="logo-glow"></div>

			<picture>
				<source srcset="/NOZA.LOGO.hero.webp" type="image/webp" />
				<img src="/NOZA.LOGO.svg" alt="NOZA LLC" class="hero-logo" width="110" height="110" fetchpriority="high" decoding="async" />
			</picture>
		</div>

		<div class="hero-text">
			<h1 class="hero-headline">{t('hero.headline')}</h1>
			<p class="hero-subheadline">{t('hero.subheadline')}</p>

			<div class="hero-ctas">
				<a class="cta-primary" href={`${prefix}/contact`}>{t('hero.cta.discovery')}</a>
				<a class="cta-secondary" href={`${prefix}/services`}>{t('hero.cta.seeWork')}</a>
			</div>

			<p class="hero-location">{t('hero.location')}</p>
		</div>
	</div>
</section>




