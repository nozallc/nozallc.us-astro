---
import en from '../i18n/locales/en.json';
import es from '../i18n/locales/es.json';

const lang = Astro.props.lang || 'en';
const translations = lang === 'es' ? es : en;
const t = (key) => translations[key] || key;

// English default = no prefix. Spanish = /es prefix.
const prefix = lang === 'es' ? '/es' : '';
---

<section class="hero">
	<div class="cosmic-background">
		<div class="stars"></div>
		<div class="nebula nebula-1"></div>
		<div class="nebula nebula-2"></div>
		<div class="nebula nebula-3"></div>
	</div>

	<div class="particles"></div>

	<div class="hero-content">
		<div class="glowing-orb-container">
			<div class="glowing-orb"></div>
			<div class="orbit-ring orbit-ring-1"></div>
			<div class="orbit-ring orbit-ring-2"></div>
			<div class="orbit-ring orbit-ring-3"></div>

			<!-- NEW: logo-driven glow source -->
			<div class="logo-glow"></div>

			<img src="/NOZA.LOGO.svg" alt="NOZA LLC" class="hero-logo" />
		</div>

		<div class="hero-text">
			<h1 class="hero-headline">{t('hero.headline')}</h1>
			<p class="hero-subheadline">{t('hero.subheadline')}</p>

			<div class="hero-ctas">
				<a class="cta-primary" href={`${prefix}/contact`}>{t('hero.cta.discovery')}</a>
				<a class="cta-secondary" href={`${prefix}/services`}>{t('hero.cta.seeWork')}</a>
			</div>

			<p class="hero-location">{t('hero.location')}</p>
		</div>
	</div>
</section>

<style>
	.hero {
		position: relative;
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		overflow: hidden;
		padding: 2rem;
	}

	.cosmic-background {
		position: absolute;
		inset: 0;
		z-index: 0;
		overflow: hidden;
	}

	/* ✅ FIX: Full-width stars using percentage-based radial gradients (not px box-shadows) */
	.stars {
		position: absolute;
		inset: 0;
		opacity: 0.7;
		background-repeat: no-repeat;
		background-image:
			radial-gradient(circle, rgba(255,255,255,0.75) 1px, transparent 2px),
			radial-gradient(circle, rgba(255,255,255,0.55) 1px, transparent 2px),
			radial-gradient(circle, rgba(255,255,255,0.45) 1px, transparent 2px),
			radial-gradient(circle, rgba(255,255,255,0.35) 1px, transparent 2px),
			radial-gradient(circle, rgba(255,255,255,0.65) 1px, transparent 2px),
			radial-gradient(circle, rgba(255,255,255,0.50) 1px, transparent 2px),
			radial-gradient(circle, rgba(255,255,255,0.40) 1px, transparent 2px),
			radial-gradient(circle, rgba(255,255,255,0.30) 1px, transparent 2px),
			radial-gradient(circle, rgba(255,255,255,0.60) 1px, transparent 2px),
			radial-gradient(circle, rgba(255,255,255,0.45) 1px, transparent 2px),
			radial-gradient(circle, rgba(255,255,255,0.35) 1px, transparent 2px),
			radial-gradient(circle, rgba(255,255,255,0.55) 1px, transparent 2px);
		background-size: 2px 2px;
		background-position:
			6% 12%,
			12% 78%,
			18% 42%,
			24% 18%,
			32% 64%,
			40% 28%,
			52% 80%,
			60% 38%,
			72% 22%,
			78% 70%,
			88% 46%,
			94% 16%;
		animation: twinkle 3.2s ease-in-out infinite;
	}

	@keyframes twinkle {
		0%, 100% { opacity: 0.35; }
		50% { opacity: 0.95; }
	}

	.nebula {
		position: absolute;
		border-radius: 50%;
		filter: blur(80px);
		opacity: 0.08;
	}

	.nebula-1 {
		width: 400px;
		height: 400px;
		background: radial-gradient(circle, rgba(0, 212, 255, 0.15) 0%, transparent 70%);
		top: 10%;
		left: 10%;
		animation: drift 8s ease-in-out infinite;
	}

	.nebula-2 {
		width: 500px;
		height: 500px;
		background: radial-gradient(circle, rgba(163, 0, 255, 0.1) 0%, transparent 70%);
		top: 50%;
		right: 5%;
		animation: drift 10s ease-in-out infinite reverse;
	}

	.nebula-3 {
		width: 350px;
		height: 350px;
		background: radial-gradient(circle, rgba(255, 0, 110, 0.1) 0%, transparent 70%);
		bottom: 10%;
		left: 50%;
		animation: drift 12s ease-in-out infinite;
	}

	@keyframes drift {
		0%, 100% { transform: translate3d(0,0,0); }
		50% { transform: translate3d(18px,-14px,0); }
	}

	/* ✅ FIX: Full-width particles (2 layers) */
	.particles {
		position: absolute;
		inset: 0;
		overflow: hidden;
		z-index: 0;
	}

	.particles::before,
	.particles::after {
		content: '';
		position: absolute;
		inset: -40px;
		pointer-events: none;
		background-repeat: no-repeat;
		opacity: 0.7;
		animation: particle-drift 10s ease-in-out infinite;
	}

	.particles::before {
		background-image:
			radial-gradient(circle, rgba(0,212,255,0.9) 1px, transparent 2px),
			radial-gradient(circle, rgba(163,0,255,0.8) 1px, transparent 2px),
			radial-gradient(circle, rgba(255,0,110,0.8) 1px, transparent 2px),
			radial-gradient(circle, rgba(255,255,255,0.55) 1px, transparent 2px),
			radial-gradient(circle, rgba(0,212,255,0.7) 1px, transparent 2px),
			radial-gradient(circle, rgba(255,255,255,0.45) 1px, transparent 2px);
		background-size: 2px 2px;
		background-position:
			10% 30%,
			22% 70%,
			38% 40%,
			54% 76%,
			70% 24%,
			90% 58%;
		filter: blur(0.2px);
	}

	.particles::after {
		opacity: 0.5;
		animation-duration: 14s;
		background-image:
			radial-gradient(circle, rgba(0,212,255,0.6) 1px, transparent 2px),
			radial-gradient(circle, rgba(163,0,255,0.6) 1px, transparent 2px),
			radial-gradient(circle, rgba(255,0,110,0.6) 1px, transparent 2px),
			radial-gradient(circle, rgba(255,255,255,0.45) 1px, transparent 2px),
			radial-gradient(circle, rgba(0,212,255,0.55) 1px, transparent 2px);
		background-size: 2px 2px;
		background-position:
			8% 86%,
			30% 18%,
			56% 84%,
			82% 62%,
			94% 22%;
	}

	@keyframes particle-drift {
		0%, 100% { transform: translate3d(0,0,0); }
		50% { transform: translate3d(18px, -16px, 0); }
	}

	.hero-content {
		position: relative;
		z-index: 1;
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
		max-width: 900px;
		gap: 3rem;
	}

	.glowing-orb-container {
		position: relative;
		width: 200px;
		height: 200px;
		margin-bottom: 2rem;
		display: grid;
		place-items: center;
	}

	/* Slightly calmer orb so the logo glow feels like the source */
	.glowing-orb {
		position: absolute;
		width: 150px;
		height: 150px;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		background: radial-gradient(circle at 35% 35%, rgba(0, 212, 255, 0.55), rgba(163, 0, 255, 0.35), rgba(255, 0, 110, 0.22));
		border-radius: 50%;
		filter: blur(22px);
		animation: pulse-glow 3s ease-in-out infinite;
		box-shadow: 0 0 55px rgba(0,212,255,0.35), 0 0 85px rgba(255,0,110,0.18);
		z-index: 0;
	}

	@keyframes pulse-glow {
		0%, 100% { transform: translate(-50%, -50%) scale(1); opacity: 0.8; }
		50% { transform: translate(-50%, -50%) scale(1.05); opacity: 1; }
	}

	/* ✅ Logo-driven glow: ignite → fill orb → dim */
	.logo-glow {
		position: absolute;
		width: 140px;
		height: 140px;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		border-radius: 50%;
		background: radial-gradient(circle, rgba(0,212,255,0.65) 0%, rgba(163,0,255,0.35) 45%, transparent 70%);
		filter: blur(10px);
		opacity: 0.25;
		animation: logo-ignite 3.8s ease-in-out infinite;
		z-index: 1;
	}

	@keyframes logo-ignite {
		0%, 100% { opacity: 0.18; transform: translate(-50%, -50%) scale(0.95); }
		35% { opacity: 0.85; transform: translate(-50%, -50%) scale(1.08); }
		60% { opacity: 0.30; transform: translate(-50%, -50%) scale(1.00); }
	}

	.orbit-ring {
		position: absolute;
		border: 2px solid;
		border-radius: 50%;
		top: 50%;
		left: 50%;
	}

	.orbit-ring-1 {
		width: 200px;
		height: 200px;
		border-color: rgba(0, 212, 255, 0.3);
		transform: translate(-50%, -50%) rotateX(75deg);
		animation: spin-orbit 8s linear infinite;
	}

	.orbit-ring-2 {
		width: 250px;
		height: 250px;
		border-color: rgba(163, 0, 255, 0.2);
		transform: translate(-50%, -50%) rotateX(60deg);
		animation: spin-orbit 10s linear infinite reverse;
	}

	.orbit-ring-3 {
		width: 300px;
		height: 300px;
		border-color: rgba(255, 0, 110, 0.15);
		transform: translate(-50%, -50%) rotateX(45deg);
		animation: spin-orbit 12s linear infinite;
	}

	@keyframes spin-orbit {
		from { transform: translate(-50%, -50%) rotateX(65deg) rotateZ(0deg); }
		to { transform: translate(-50%, -50%) rotateX(65deg) rotateZ(360deg); }
	}

	.hero-logo {
		position: absolute;
		width: 110px;
		height: 110px;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		z-index: 2;
		animation: logo-shimmer 3.8s ease-in-out infinite;
		filter: drop-shadow(0 0 10px rgba(0,212,255,0.30));
	}

	@keyframes logo-shimmer {
		0%, 100% { filter: drop-shadow(0 0 10px rgba(0,212,255,0.30)); }
		35% { filter: drop-shadow(0 0 24px rgba(0,212,255,0.70)); }
		60% { filter: drop-shadow(0 0 12px rgba(0,212,255,0.40)); }
	}

	.hero-text { display: flex; flex-direction: column; gap: 1.5rem; }

	.hero-headline {
		font-size: clamp(2.5rem, 8vw, 4rem);
		font-weight: 800;
		background: linear-gradient(135deg, var(--primary-neon), var(--secondary-neon), var(--tertiary-neon));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		line-height: 1.2;
		animation: fade-in-up 1s ease-out;
	}

	.hero-subheadline {
		font-size: clamp(1rem, 2.5vw, 1.25rem);
		color: var(--text-secondary);
		max-width: 700px;
		margin: 0 auto;
		line-height: 1.8;
		animation: fade-in-up 1s ease-out 0.2s both;
	}

	.hero-ctas {
		display: flex;
		gap: 1.5rem;
		justify-content: center;
		flex-wrap: wrap;
		animation: fade-in-up 1s ease-out 0.4s both;
	}

	/* Make <a> look like your buttons */
	.hero-ctas a {
		text-decoration: none;
		display: inline-flex;
		align-items: center;
		justify-content: center;
	}

	.hero-location {
		font-size: 0.95rem;
		color: var(--text-secondary);
		animation: fade-in-up 1s ease-out 0.6s both;
	}

	@keyframes fade-in-up {
		from { opacity: 0; transform: translateY(18px); }
		to { opacity: 1; transform: translateY(0); }
	}

	/* Respect reduced motion preferences */
	@media (prefers-reduced-motion: reduce) {
		.nebula,
		.stars,
		.particles::before,
		.particles::after,
		.glowing-orb,
		.logo-glow,
		.orbit-ring,
		.hero-logo,
		.hero-headline,
		.hero-subheadline,
		.hero-ctas,
		.hero-location {
			animation: none !important;
		}

		.orbit-ring { transform: translate(-50%, -50%); }
	}
</style>
