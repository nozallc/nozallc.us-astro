---
import LanguageToggle from './LanguageToggle.astro';
---

<nav class="navbar">
	<div class="nav-container">
		<!-- Logo -->
		<a href="/" class="nav-logo">
			<img src="/NOZA.LOGO.svg" alt="NOZA LLC" width="110" height="110" class="logo-image" />
		</a>

		<!-- Language Toggle -->
		<LanguageToggle />

		<!-- Hamburger Menu -->
		<div class="hamburger-menu" id="hamburger">
			<span></span>
			<span></span>
			<span></span>
		</div>

		<!-- Navigation Links -->
		<ul class="nav-links" id="navLinks">
			<li><a href="/">Home</a></li>
			<li><a href="/services">Services</a></li>
			<li><a href="/websites">Websites</a></li>
			<li><a href="/branding">Branding</a></li>
			<li><a href="/digital-marketing">Digital Marketing</a></li>
			<li><a href="/photo-video">Photo & Video</a></li>
			<li><a href="/consulting">Consulting</a></li>
			<li><a href="/vendor-network">Vendor Network</a></li>
			<li class="nav-cta"><a href="/contact">Contact</a></li>
		</ul>
	</div>
</nav>

<style>
	.navbar {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		z-index: 1000;
		padding: 1.25rem 2rem;
		transition: all 0.3s ease;
		background: rgba(10, 14, 39, 0);
		backdrop-filter: blur(0px);
		border-bottom: 1px solid rgba(0, 212, 255, 0);
	}

	.navbar.scrolled {
		background: rgba(10, 14, 39, 0.4);
		backdrop-filter: blur(10px);
		border-bottom: 1px solid rgba(0, 212, 255, 0.15);
	}

	.nav-container {
		max-width: 1400px;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	/* Logo Styles */
	.nav-logo {
		display: flex;
		align-items: center;
		text-decoration: none;
		z-index: 1001;
		transition: transform 0.3s ease;
	}

	.nav-logo:hover {
		transform: scale(1.05);
	}

	.logo-image {
		height: 90px;
		width: auto;
		filter: brightness(1.1) drop-shadow(0 0 8px rgba(0, 212, 255, 0.3));
		transition: filter 0.3s ease;
	}

	.nav-logo:hover .logo-image {
		filter: brightness(1.2) drop-shadow(0 0 16px rgba(0, 212, 255, 0.6));
	}

	/* Navigation Links */
	.nav-links {
		display: flex;
		list-style: none;
		gap: 2.5rem;
		align-items: center;
		margin: 0;
		padding: 0;
	}

	.nav-links a {
		color: var(--text-primary);
		text-decoration: none;
		font-size: 0.95rem;
		font-weight: 500;
		letter-spacing: 0.3px;
		position: relative;
		transition: color 0.3s ease;
		padding: 0.5rem 0;
	}

	.nav-links a::after {
		content: '';
		position: absolute;
		bottom: 0;
		left: 0;
		width: 0;
		height: 2px;
		background: linear-gradient(90deg, var(--primary-neon), var(--tertiary-neon));
		transition: width 0.3s ease;
		box-shadow: 0 0 10px rgba(0, 212, 255, 0.5);
	}

	.nav-links a:hover::after {
		width: 100%;
	}

	.nav-links a:hover {
		color: var(--primary-neon);
		text-shadow: 0 0 8px rgba(0, 212, 255, 0.4);
	}

	/* CTA Link */
	.nav-cta a {
		color: var(--primary-neon);
		border: 1px solid rgba(0, 212, 255, 0.5);
		padding: 0.625rem 1.5rem;
		border-radius: 6px;
		transition: all 0.3s ease;
		position: relative;
	}

	.nav-cta a::after {
		display: none;
	}

	.nav-cta a:hover {
		background: rgba(0, 212, 255, 0.1);
		border-color: var(--primary-neon);
		box-shadow: 0 0 15px rgba(0, 212, 255, 0.4), inset 0 0 10px rgba(0, 212, 255, 0.05);
		text-shadow: none;
	}

	/* Hamburger Menu */
	.hamburger-menu {
		display: none;
		flex-direction: column;
		cursor: pointer;
		z-index: 1001;
		gap: 6px;
	}

	.hamburger-menu span {
		width: 24px;
		height: 2px;
		background: var(--text-primary);
		transition: all 0.3s ease;
		border-radius: 1px;
	}

	.hamburger-menu.active span:nth-child(1) {
		transform: rotate(45deg) translate(10px, 10px);
	}

	.hamburger-menu.active span:nth-child(2) {
		opacity: 0;
	}

	.hamburger-menu.active span:nth-child(3) {
		transform: rotate(-45deg) translate(7px, -7px);
	}

	/* Mobile Styles */
	@media (max-width: 768px) {
		.navbar {
			padding: 1rem 1.5rem;
		}

		.hamburger-menu {
			display: flex;
		}

		.nav-links {
			position: absolute;
			top: 70px;
			left: 0;
			right: 0;
			background: rgba(5, 7, 26, 0.95);
			backdrop-filter: blur(15px);
			border-bottom: 1px solid rgba(0, 212, 255, 0.15);
			flex-direction: column;
			gap: 0;
			padding: 1rem 0;
			max-height: 0;
			overflow: hidden;
			transition: max-height 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		}

		.nav-links.active {
			max-height: 600px;
		}

		.nav-links li {
			width: 100%;
			padding: 0;
		}

		.nav-links a {
			display: block;
			padding: 1rem 1.5rem;
			font-size: 1rem;
		}

		.nav-links a::after {
			display: none;
		}

		.nav-links a:hover {
			background: rgba(0, 212, 255, 0.05);
			border-left: 3px solid var(--primary-neon);
			padding-left: calc(1.5rem - 3px);
		}

		.nav-cta {
			width: 100%;
		}

		.nav-cta a {
			display: block;
			text-align: center;
			margin: 1rem 1.5rem;
			border-radius: 6px;
		}

		.logo-image {
			height: 70px;
		}

		.nav-links {
			gap: 0;
		}
	}

	@media (max-width: 480px) {
		.navbar {
			padding: 0.875rem 1rem;
		}

		.logo-image {
			height: 60px;
		}

		.nav-links a {
			font-size: 0.9rem;
			padding: 0.875rem 1rem;
		}
	}
</style>

<script>
	document.addEventListener('DOMContentLoaded', function() {
		try {
			const hamburger = document.getElementById('hamburger');
			const navLinks = document.getElementById('navLinks');
			const navbar = document.querySelector('.navbar');

			if (!hamburger || !navLinks || !navbar) {
				return;
			}

			// Hamburger menu toggle
			hamburger.addEventListener('click', () => {
				hamburger.classList.toggle('active');
				navLinks.classList.toggle('active');
			});

			// Close menu when a link is clicked
			document.querySelectorAll('.nav-links a').forEach(link => {
				link.addEventListener('click', () => {
					hamburger.classList.remove('active');
					navLinks.classList.remove('active');
				});
			});

			// Scroll handler for navbar opacity
			window.addEventListener('scroll', () => {
				const scrollY = window.scrollY;
				if (scrollY > 50) {
					navbar.classList.add('scrolled');
				} else {
					navbar.classList.remove('scrolled');
				}
			});
		} catch (error) {
			console.error('Navigation initialization error:', error);
		}
	});
</script>
