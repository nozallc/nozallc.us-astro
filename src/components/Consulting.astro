---
---
import { getTranslation } from '../i18n/utils';

const lang = Astro.props.lang || 'en';
const t = (key) => getTranslation(key, lang);
---

<section class="consulting">
	<div class="section-header">
		<h2>{t('consulting.title')}</h2>
		<p class="section-subtitle">{t('consulting.subtitle')}</p>
	</div>

	<div class="consulting-cards">
		<div class="consulting-card">
			<div class="card-number">01</div>
			<h3>{t('consulting.startup')}</h3>
			<p>{t('consulting.startupDesc')}</p>
		</div>

		<div class="consulting-card">
			<div class="card-number">02</div>
			<h3>{t('consulting.growth')}</h3>
			<p>{t('consulting.growthDesc')}</p>
		</div>

		<div class="consulting-card">
			<div class="card-number">03</div>
			<h3>{t('consulting.branding')}</h3>
			<p>{t('consulting.brandingDesc')}</p>
		</div>

		<div class="consulting-card">
			<div class="card-number">04</div>
			<h3>{t('consulting.leads')}</h3>
			<p>{t('consulting.leadsDesc')}</p>
		</div>

		<div class="consulting-card">
			<div class="card-number">05</div>
			<h3>{t('consulting.vendors')}</h3>
			<p>{t('consulting.vendorsDesc')}</p>
		</div>

		<div class="consulting-card">
			<div class="card-number">06</div>
			<h3>{t('consulting.support')}</h3>
			<p>{t('consulting.supportDesc')}</p>
		</div>
	</div>
</section>

<style>
	.consulting {
		position: relative;
		padding: 6rem 2rem;
		background: linear-gradient(180deg, rgba(15, 24, 53, 0.8) 0%, var(--dark-bg) 100%);
		z-index: 2;
	}

	.consulting-cards {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		max-width: 1200px;
		margin: 3rem auto;
	}

	.consulting-card {
		padding: 2.5rem;
		background: rgba(163, 0, 255, 0.05);
		border: 1px solid rgba(163, 0, 255, 0.2);
		border-radius: 12px;
		backdrop-filter: blur(10px);
		transition: all 0.3s ease;
		position: relative;
	}

	.consulting-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 4px;
		background: linear-gradient(90deg, var(--primary-neon), var(--secondary-neon), var(--tertiary-neon));
		border-radius: 12px 12px 0 0;
	}

	.consulting-card:hover {
		background: rgba(163, 0, 255, 0.1);
		border-color: var(--tertiary-neon);
		transform: translateY(-8px);
		box-shadow: 0 20px 40px rgba(163, 0, 255, 0.2);
	}

	.card-number {
		font-size: 3rem;
		font-weight: 700;
		background: linear-gradient(135deg, var(--primary-neon), var(--tertiary-neon));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		margin-bottom: 1rem;
	}

	.consulting-card h3 {
		font-size: 1.3rem;
		margin-bottom: 1rem;
		color: var(--text-primary);
	}

	.consulting-card p {
		color: var(--text-secondary);
		line-height: 1.6;
	}
</style>
