---
import en from '../i18n/locales/en.json';
import es from '../i18n/locales/es.json';

const lang = Astro.props.lang || 'en';
const translations = lang === 'es' ? es : en;
const t = (key) => translations[key] || key;
---

<section class="portfolio">
	<div class="section-header">
		<h2>{t('portfolio.title')}</h2>
		<p class="section-subtitle">{t('portfolio.subtitle')}</p>
	</div>

	<div class="portfolio-grid">
		<div class="portfolio-item">
			<div class="portfolio-image branding-case"></div>
			<div class="portfolio-overlay">
				<h3>{t('portfolio.brand')}</h3>
				<p>{t('portfolio.brandDesc')}</p>
			</div>
		</div>

		<div class="portfolio-item">
			<div class="portfolio-image website-case"></div>
			<div class="portfolio-overlay">
				<h3>{t('portfolio.ecommerce')}</h3>
				<p>{t('portfolio.ecommerceDesc')}</p>
			</div>
		</div>

		<div class="portfolio-item">
			<div class="portfolio-image campaign-case"></div>
			<div class="portfolio-overlay">
				<h3>{t('portfolio.marketing')}</h3>
				<p>{t('portfolio.marketingDesc')}</p>
			</div>
		</div>

		<div class="portfolio-item">
			<div class="portfolio-image video-case"></div>
			<div class="portfolio-overlay">
				<h3>{t('portfolio.drone')}</h3>
				<p>{t('portfolio.droneDesc')}</p>
			</div>
		</div>

		<div class="portfolio-item">
			<div class="portfolio-image rebranding-case"></div>
			<div class="portfolio-overlay">
				<h3>{t('portfolio.relaunch')}</h3>
				<p>{t('portfolio.relaunghDesc')}</p>
			</div>
		</div>

		<div class="portfolio-item">
			<div class="portfolio-image consulting-case"></div>
			<div class="portfolio-overlay">
				<h3>{t('portfolio.growth')}</h3>
				<p>{t('portfolio.growthDesc')}</p>
			</div>
		</div>
	</div>
</section>


