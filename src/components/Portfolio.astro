<style is:global>
	.portfolio {
		position: relative;
		padding: 6rem 2rem;
		background: linear-gradient(180deg, var(--dark-bg) 0%, rgba(15, 24, 53, 0.8) 100%);
		z-index: 2;
	}

	.portfolio-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
		max-width: 1200px;
		margin: 3rem auto;
	}

	.portfolio-item {
		position: relative;
		overflow: hidden;
		border-radius: 12px;
		aspect-ratio: 1;
		cursor: pointer;
	}

	.portfolio-image {
		width: 100%;
		height: 100%;
		background: linear-gradient(135deg, rgba(0, 212, 255, 0.2), rgba(163, 0, 255, 0.2));
		position: relative;
		border: 1px solid var(--border-glow);
		border-radius: 12px;
		transition: all 0.4s ease;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 3rem;
		color: var(--primary-neon);
	}

	.branding-case::before { content: 'üé®'; }
	.website-case::before { content: 'üåê'; }
	.campaign-case::before { content: 'üìä'; }
	.video-case::before { content: 'üé¨'; }
	.rebranding-case::before { content: '‚ú®'; }
	.consulting-case::before { content: 'üíº'; }

	.portfolio-item:hover .portfolio-image {
		background: linear-gradient(135deg, rgba(0, 212, 255, 0.4), rgba(163, 0, 255, 0.4));
		border-color: var(--primary-neon);
		transform: scale(1.1);
		box-shadow: 0 0 30px rgba(0, 212, 255, 0.5);
	}

	.portfolio-overlay {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		padding: 2rem;
		background: linear-gradient(to top, rgba(10, 14, 39, 0.95), transparent);
		transform: translateY(100%);
		transition: all 0.4s ease;
	}

	.portfolio-item:hover .portfolio-overlay {
		transform: translateY(0);
	}

	.portfolio-overlay h3 {
		font-size: 1.3rem;
		margin-bottom: 0.5rem;
		color: var(--primary-neon);
	}

	.portfolio-overlay p {
		color: var(--text-secondary);
		font-size: 0.95rem;
	}
</style>
