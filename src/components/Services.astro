---
---
import { getTranslation } from '../i18n/utils';

interface Props {
  lang?: 'en' | 'es';
}

const lang = Astro.props.lang || 'en';
const t = (key: string): string => getTranslation(key as any, lang as any);
---

<section class="services">
	<div class="section-header">
		<h2>{t('services.title')}</h2>
		<p class="section-subtitle">{t('services.subtitle')}</p>
	</div>

	<div class="services-grid">
		<div class="service-card">
			<div class="card-icon digital-marketing"></div>
			<h3>{t('services.digitalMarketing.title')}</h3>
			<p>{t('services.digitalMarketing.desc')}</p>
		</div>

		<div class="service-card">
			<div class="card-icon branding"></div>
			<h3>{t('services.branding.title')}</h3>
			<p>{t('services.branding.desc')}</p>
		</div>

		<div class="service-card">
			<div class="card-icon web-design"></div>
			<h3>{t('services.websites.title')}</h3>
			<p>{t('services.websites.desc')}</p>
		</div>

		<div class="service-card">
			<div class="card-icon social-media"></div>
			<h3>{t('services.socialMedia.title')}</h3>
			<p>{t('services.socialMedia.desc')}</p>
		</div>

		<div class="service-card">
			<div class="card-icon media"></div>
			<h3>{t('services.photoVideo.title')}</h3>
			<p>{t('services.photoVideo.desc')}</p>
		</div>

		<div class="service-card">
			<div class="card-icon consulting"></div>
			<h3>{t('services.consulting.title')}</h3>
			<p>{t('services.consulting.desc')}</p>
		</div>
	</div>
</section>

<style>
	.services {
		position: relative;
		padding: 6rem 2rem;
		background: linear-gradient(180deg, var(--dark-bg) 0%, rgba(15, 24, 53, 0.8) 100%);
		z-index: 2;
	}

	.services-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		max-width: 1200px;
		margin: 0 auto;
	}

	.service-card {
		padding: 2rem;
		background: rgba(0, 212, 255, 0.05);
		border: 1px solid var(--border-glow);
		border-radius: 12px;
		cursor: pointer;
		transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
		position: relative;
		overflow: hidden;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.service-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(90deg, transparent, rgba(0, 212, 255, 0.1), transparent);
		transition: left 0.6s ease;
		z-index: 0;
	}

	.service-card:hover::before {
		left: 100%;
	}

	.service-card:hover {
		background: rgba(0, 212, 255, 0.15);
		border-color: var(--primary-neon);
		transform: translateY(-10px);
		box-shadow: 0 0 30px rgba(0, 212, 255, 0.4);
	}

	.card-icon {
		width: 60px;
		height: 60px;
		border-radius: 12px;
		background: linear-gradient(135deg, var(--primary-neon), var(--tertiary-neon));
		position: relative;
		z-index: 1;
	}

	.service-card h3 {
		font-size: 1.3rem;
		position: relative;
		z-index: 1;
		color: var(--text-primary);
	}

	.service-card p {
		color: var(--text-secondary);
		position: relative;
		z-index: 1;
		line-height: 1.6;
	}
</style>
