---
import RootLayout from '../../../layouts/RootLayout.astro';
import Services from '../../../components/Services.astro';
import Stack from '../../../components/Stack.astro';
import Portfolio from '../../../components/Portfolio.astro';
import FinalCTA from '../../../components/FinalCTA.astro';

const pageTitle = 'Sobre NOZA LLC - Marketing Digital y Diseño Web en Lexington, KY';
const pageDescription = 'Conozca a NOZA LLC, una agencia digital basada en Lexington enfocada en ayudar a pequeños negocios a tener éxito en línea.';
