	.price-badge {
		display: inline-block;
		padding: 0.75rem 1.5rem;
		background: linear-gradient(135deg, var(--tertiary-neon), var(--primary-neon));
		color: var(--darker-bg);
		border-radius: 50px;
		font-weight: 700;
		font-size: 1.1rem;
