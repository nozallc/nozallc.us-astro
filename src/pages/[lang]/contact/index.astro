---
import { getCurrentLanguage, getLanguageTranslations, getAvailableLanguages, type Language } from '../../../i18n/utils';
import RootLayout from '../../../layouts/RootLayout.astro';

export function getStaticPaths() {
  return getAvailableLanguages().map(lang => ({
    params: { lang },
  }));
}

const { lang } = Astro.params as { lang: Language };
const currentLang = getCurrentLanguage({ lang });

const pageTitle = currentLang === 'en'
  ? 'Contact NOZA LLC - Digital Marketing & Web Design in Lexington, KY'
  : 'Contacto NOZA LLC - Marketing Digital y Diseño Web en Lexington, KY';

const pageDescription = currentLang === 'en'
  ? 'Get in touch with NOZA LLC. We serve Central Kentucky and beyond.'
  : 'Comuníquese con NOZA LLC. Servimos a Kentucky Central y más allá.';
---

<RootLayout title={pageTitle} description={pageDescription}>
  <div class="contact-page">
    <h1>Contact Page - {lang.toUpperCase()}</h1>
    <p>Language-specific contact page content coming soon.</p>
  </div>
</RootLayout>

<style>
  .contact-page {
    padding: 4rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
    min-height: 60vh;
  }

  h1 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }
</style>
